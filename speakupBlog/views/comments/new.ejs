<%- include("../partials/header") %> 


<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Add New Comment to <%= blog.name %> </h1>
    </div>
    
    <div class="col-xs-12 col-md-6 col-lg-6">
        <div class="form-login">
        <form action="/blogs/<%= blog._id %>/comments" method="POST">
            <div class="form-group">
                <label for="comment[text]">Add Comment</label>
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <div class="col-md-12 text-center">
        <a href="/blogs/<%= blog._id %>">Go Back</a>
    </div>
    </div>
    </div>
    
</div>

<%- include("../partials/footer") %> 
